<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brunchie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Brunchie.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Vertical Navbar -->
        <div class="bg-black text-white vh-100 d-flex flex-column p-3" style="width: 100px;">
            <!-- Logo -->
            <div class="mb-4">
                <img src="~/assets/temp.png" alt="Logo" class="mb-4 img-fluid" />
            </div>

            <!-- Menu Items -->
            <ul class="nav flex-column mb-4">
                <li class="nav-item mb-3">
                    <a asp-action="Index" class="nav-link text-white">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a asp-action="Favorites" class="nav-link text-white">
                        <i class="fas fa-heart"></i>
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a asp-action="Feedback" class="nav-link text-white">
                        <i class="fas fa-comment-alt"></i>
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a asp-action="ActiveOrders" class="nav-link text-white">
                        <i class="fa-solid fa-bag-shopping"></i>
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a asp-action="History" class="nav-link text-white">
                        <i class="fas fa-history"></i>
                    </a>
                </li>
            </ul>

            <!-- Logout Button -->
            <div class="mt-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post" action="~/Account/Logout">
                        <button type="submit" class="btn btn-danger btn-block">
                            <i class="fas fa-sign-out-alt mr-2"></i>
                        </button>
                    </form>
                }
                else
                {
                    <a href="~/Account/Login" class="btn btn-success btn-block">
                        <i class="fas fa-sign-in-alt mr-2"></i>
                    </a>
                }
            </div>
        </div>


        <!-- Main Content Area -->
        <div class="flex-grow-1 p-0 m-0">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

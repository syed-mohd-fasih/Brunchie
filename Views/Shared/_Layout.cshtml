<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brunchie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Brunchie.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="sidebar d-flex flex-column align-items-center py-4" style="min-width: 80px; width: 80px; min-height: 100vh;">
        <!-- Logo -->
        <div class="mb-4">
            <img src="~/assets/Brunchie.png" alt="Logo" class="img-fluid" style="max-width: 40px;" />
        </div>

        <!-- Menu Items -->
        @if (User.Identity != null)
        {
            if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Student"))
                {
                    <ul class="nav flex-column mb-auto">
                        <li class="nav-item mb-3">
                            <a asp-controller="Student" asp-action="Index" class="nav-link">
                                <i class="fas fa-home nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a asp-controller="Student" asp-action="Favorites" class="nav-link">
                                <i class="fas fa-heart nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a asp-controller="Student" asp-action="Checkout" class="nav-link">
                                <i class="fa-solid fa-bag-shopping nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a asp-controller="Student" asp-action="History" class="nav-link">
                                <i class="fas fa-history nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a asp-controller="Home" asp-action="Feedback" class="nav-link">
                                <i class="fas fa-comment-alt nav-icon"></i>
                            </a>
                        </li>
                    </ul>
                }
                else if (User.IsInRole("Vendor"))
                {
                    <!-- Need to edit for Vendor specific links -->
                    <ul class="nav flex-column mb-auto">
                        <li class="nav-item mb-3">
                            <a asp-controller="Vendor" asp-action="Index" class="nav-link">
                                <i class="fas fa-home nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a asp-controller="Vendor" asp-action="" class="nav-link">
                                <i class="fas fa-heart nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a asp-controller="Vendor" asp-action="" class="nav-link">
                                <i class="fa-solid fa-bag-shopping nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a asp-controller="Vendor" asp-action="" class="nav-link">
                                <i class="fas fa-history nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a asp-controller="Home" asp-action="Feedback" class="nav-link">
                                <i class="fas fa-comment-alt nav-icon"></i>
                            </a>
                        </li>
                    </ul>
                }
            }
        }

        <!-- Theme Toggle and Login/Logout -->
        <div class="mt-auto">
            <button id="toggleDarkMode" class="btn btn-link nav-link mb-3">
                <i id="themeIcon" class="fas fa-moon nav-icon"></i>
            </button>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-area="Identity" asp-page="/Account/Logout" class="btn btn-link nav-link">
                    <i class="fas fa-sign-out-alt nav-icon"></i>
                </a>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-link nav-link">
                    <i class="fas fa-sign-in-alt nav-icon"></i>
                </a>
            }
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
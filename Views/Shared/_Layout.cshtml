<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brunchie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Brunchie.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Vertical Navbar -->
        <div class="bg-secondary text-white vh-100 d-flex flex-column p-3" style="width: 100px;">
            <!-- Logo -->
            <div class="mb-4">
                <img src="~/assets/Brunchie.png" alt="Logo" class="mb-4 img-fluid" />
            </div>

            <!-- Menu Items -->
            <ul class="nav flex-column mb-4">

                <!-- Student NavBar -->
                <li class="nav-item mb-3 ms-auto me-auto">
                    <a asp-action="Index" class="nav-link text-white">
                        <i class="fas fa-home" style="color: black;"></i>
                    </a>
                </li>
                <li class="nav-item mb-3 ms-auto me-auto">
                    <a asp-action="Favorites" class="nav-link text-white">
                        <i class="fas fa-heart fa-lg" style="color: black;"></i>
                    </a>
                </li>
                <li class="nav-item mb-3 ms-auto me-auto">
                    <a asp-action="Checkout" class="nav-link text-white">
                        <i class="fa-solid fa-bag-shopping fa-lg" style="color: black;"></i>
                    </a>
                </li>
                <li class="nav-item mb-3 ms-auto me-auto">
                    <a asp-action="History" class="nav-link text-white">
                        <i class="fas fa-history fa-lg" style="color: black;"></i>
                    </a>
                </li>
                <li class="nav-item mb-3 ms-auto me-auto">
                    <a asp-controller="Home" asp-action="Feedback" class="nav-link text-white">
                        <i class="fas fa-comment-alt fa-lg" style="color: black;"></i>
                    </a>
                </li>

                <!-- Vendor NavBar -->

            </ul>

            <!-- Login/Logout Button and Theme Changer -->
            <div class="mt-auto ms-auto me-auto">
                <ul class="nav flex-column mb-4">
                    <li class="nav-item mb-3 ms-auto me-auto">
                        <button id="toggleDarkMode" class="btn">
                            <i id="moonIcon" class="fa-solid fa-moon fa-lg" style="color: black;"></i>
                            <i id="sunIcon" class="fa-solid fa-sun fa-lg d-none" style="color: black;"></i>
                        </button>
                    </li>

                    <li class="nav-item mb-3 ms-auto me-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-area="Identity" asp-page="/Account/Logout" class="btn btn-block">
                                <i class="fas fa-sign-out-alt fa-lg mr-2" style="color: black;"></i>
                            </a>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-block">
                                <i class="fas fa-sign-in-alt fa-lg mr-2" style="color: black;"></i>
                            </a>
                        }
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-grow-1 p-0 m-0">
            @RenderBody()
        </div>
    </div>

    <script>
        const toggleDarkMode = document.getElementById('toggleDarkMode');
        const moonIcon = document.getElementById('moonIcon');
        const sunIcon = document.getElementById('sunIcon');

        // Check user preference on load
        if (localStorage.getItem('darkMode') === 'enabled') {
            document.body.classList.add('dark-mode');
            moonIcon.classList.add('d-none');
            sunIcon.classList.remove('d-none');
        }

        toggleDarkMode.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            if (document.body.classList.contains('dark-mode')) {
                localStorage.setItem('darkMode', 'enabled');
                moonIcon.classList.add('d-none');
                sunIcon.classList.remove('d-none');
            } else {
                localStorage.setItem('darkMode', 'disabled');
                moonIcon.classList.remove('d-none');
                sunIcon.classList.add('d-none');
            }
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

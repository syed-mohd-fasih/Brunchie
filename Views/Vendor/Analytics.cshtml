@model Brunchie.ViewModels.VendorAnalyticsViewModel
@{
    ViewData["Title"] = "Business Analytics";
}
<div class="container mt-4">
    <h1 class="mb-4">Business Analytics</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4>Total Revenue: @Model.TotalRevenue.ToString("C")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4>Top Selling Item: @Model.TopSellingItem</h4>
                </div>
            </div>
        </div>
    </div>
    <a asp-action="DownloadCSV" class="btn btn-secondary mt-4">Download Data as CSV</a>
</div>


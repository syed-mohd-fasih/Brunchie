@model Brunchie.ViewModels.VendorDashboardModel
@{
    ViewData["Title"] = "Vendor Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Vendor Dashboard</h1>

    <!-- Vendor Info Section -->
    <section class="mb-5">
        <div class="card">
            <div class="card-body">
                @if (User.Identity != null)
                {
                    <h2 class="card-title">@User.Identity.Name</h2>
                }
                else
                {
                    <p>Something is wrong</p>
                }
            </div>
        </div>
    </section>

    <!-- Today's Orders Section -->
    <section class="mb-5">
        <div class="container">
            <h2 class="my-4">Today's Orders</h2>
            <!-- Incoming Orders -->
            @if (Model.TodayOrders != null && Model.TodayOrders.Count > 0)
            {
                <h4>Incoming Orders</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Student ID</th>
                            <th>Items</th>
                            <th>Total Price</th>
                            <th>Order Time</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.TodayOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.StudentId</td>
                                <td>
                                    <ul>
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <li>@item.Name (@item.Quantity) @if (!string.IsNullOrEmpty(item.SpecialInstruction))
                                                {
                                                    <em>@item.SpecialInstruction</em>
                                                }</li>
                                        }
                                    </ul>
                                </td>
                                <td>@order.TotalPrice.ToString("C")</td>
                                <td>@order.DateOrdered.ToString("hh:mm tt")</td>
                                <td>@order.Status</td>
                                <td>
                                    <a asp-action="UpdateOrderStatus" asp-route-id="@order.Id" asp-route-status="Recieved" class="btn btn-success btn-sm">Mark as Recieved</a>
                                    <a asp-action="UpdateOrderStatus" asp-route-id="@order.Id" asp-route-status="Cancelled" class="btn btn-danger btn-sm">Cancel Order</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>There are no incoming orders yet...</p>
            }
            <!-- Completed Orders -->
            @if (Model.CompletedOrders != null && Model.CompletedOrders.Count > 0)
            {
                <h4>Incoming Orders</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Student ID</th>
                            <th>Items</th>
                            <th>Total Price</th>
                            <th>Order Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.CompletedOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.StudentId</td>
                                <td>
                                    <ul>
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <li>@item.Name (@item.Quantity) @if (!string.IsNullOrEmpty(item.SpecialInstruction))
                                                {
                                                    <em>@item.SpecialInstruction</em>
                                                }</li>
                                        }
                                    </ul>
                                </td>
                                <td>@order.TotalPrice.ToString("C")</td>
                                <td>@order.DateOrdered.ToString("hh:mm tt")</td>
                                <td>@order.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>There are no completed orders yet...</p>
            }
        </div>
    </section>

    <!-- Menu Management Section -->
    <section class="mb-5">
        <h2>Manage Menu</h2>
        <p>
            <a asp-action="AddMenu" class="btn btn-primary">Add New Menu</a>
        </p>
        @if (Model.Menus != null)
        {
            @foreach (var menu in Model.Menus)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">@menu.Name</h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Item Name</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (menu.MenuItems != null && menu.MenuItems.Count > 0)
                                {
                                    @foreach (var item in menu.MenuItems)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>@item.Price.ToString("C")</td>
                                            <td>
                                                <div class="d-flex">
                                                    <a asp-action="EditMenu" asp-route-id="@menu.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">This menu has no items.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-end">
                        <a asp-action="EditMenu" asp-route-id="@menu.Id" class="btn btn-primary">Add New Item</a>
                        <form asp-action="DeleteMenu" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@menu.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>

            }
        }
        else
        {
            <p>You have no menus yet...</p>
        }
    </section>

    <!-- Analytics Section -->
    <section class="mb-5">
        <h2>Business Analytics</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h3>Total Orders</h3>
                        <p class="display-4">@Model.TotalOrders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h3>Total Revenue</h3>
                        <p class="display-4">@Model.TotalRevenue.ToString("C")</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Reviews Section -->
    <section>
        <h2>Customer Reviews</h2>
        <div class="list-group">
            @if (Model.CustomerReviews != null)
            {
                @foreach (var review in Model.CustomerReviews)
                {
                    <div class="list-group-item">
                        <p><strong>@review.StudentId:</strong> @review.Comment</p>
                        <p>Rating: @review.Rating / 5</p>
                        <small class="text-muted">@review.DatePosted.ToString("MM/dd/yyyy")</small>
                    </div>
                }
            }
            else
            {
                <p>You have no reviews yet...</p>
            }
        </div>
    </section>
</div>

@model Brunchie.ViewModels.VendorDashboardModel
@{
    ViewData["Title"] = "Vendor Dashboard";
}
<div class="container mt-4">
    <h1 class="mb-4">Vendor Dashboard</h1>
    <h3>@Model.CampusName</h3>

    <section class="mb-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h4>Total Orders</h4>
                        <p class="display-6">@Model.TotalOrders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h4>Total Revenue</h4>
                        <p class="display-6">@Model.TotalRevenue.ToString("C")</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

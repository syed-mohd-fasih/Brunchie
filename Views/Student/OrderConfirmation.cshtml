@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h2 class="card-title mb-3">Order Confirmed!</h2>
                    <p class="card-text mb-4">Your order has been placed successfully! Thank you for using <strong>Brunchie</strong>.</p>
                    <a asp-action="Index" class="btn btn-primary btn-lg">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>

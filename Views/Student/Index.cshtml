@model Brunchie.ViewModels.StudentDashboardModel

@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container">
    <h1>Welcome to Brunchie</h1>
    <h2>@Model.CampusName Campus Dashboard</h2>

    <div class="row mt-4">
        <div class="col-md-8">
            <h3>Available Menu Items</h3>
            <div class="card mb-4">
                <div class="card-body">
                    @if (Model.CampusMenuItems != null && Model.CampusMenuItems.Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CampusMenuItems)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>
                                            <form asp-action="AddToCart" method="get">
                                                <input type="hidden" name="menuItemId" value="@item.Id" />
                                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No menu items available for your campus.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <h3>Your Cart</h3>
            <div class="card">
                <div class="card-body">
                    @if (Model.StudentCart != null && Model.StudentCart.Orders != null && Model.StudentCart.Orders.Any())
                    {
                        <ul class="list-group">
                            @foreach (var order in Model.StudentCart.Orders)
                            {
                                <li class="list-group-item">
                                    <strong>Order ID:</strong> @order.Id <br />
                                    <ul>
                                        @foreach(var item in order.OrderItems)
                                        {
                                            <li>@item.Name (@item.Quantity)</li>
                                        }
                                    </ul>
                                    <strong>Total Price:</strong> @order.TotalPrice.ToString("C") <br />
                                    <strong>Status:</strong> @order.Status
                                </li>
                            }
                        </ul>
                        <a asp-action="Checkout" class="btn btn-success mt-3">Proceed to Checkout</a>
                    }
                    else
                    {
                        <p>Your cart is empty.</p>
                    }
                </div>
            </div>
        </div>

        <section class="active-orders mb-5">
            <h2>Your Active Orders</h2>

            @if (Model.ActiveOrders != null && Model.ActiveOrders.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Items</th>
                            <th>Total Price</th>
                            <th>Order Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.ActiveOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>
                                    <ul>
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <li>@item.Name (@item.Quantity) - @item.Price.ToString("C")</li>
                                        }
                                    </ul>
                                </td>
                                <td>@order.TotalPrice.ToString("C")</td>
                                <td>@order.DateOrdered.ToString("MMMM dd, yyyy hh:mm tt")</td>
                                <td>@order.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>You have no active orders at the moment.</p>
            }
        </section>

    </div>
</div>

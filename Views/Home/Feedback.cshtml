@{
    ViewData["Title"] = "Feedback";
}

<div class="container w-100 h-100">
    <div class="row align-items-center h-100 w-50 m-auto">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h1 class="card-title text-center mb-4">Feedback</h1>
                <h5 class="card-title text-center mb-3">We value your feedback!</h5>
                <form asp-action="Feedback" method="post">
                    <div class="form-group mb-4">
                        <label for="feedbackMessage" class="form-label">Please leave your feedback here</label>
                        <textarea name="message" id="feedbackMessage" class="form-control" rows="4" required></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Submit Feedback</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-3 text-center">
            <a asp-action="Index" class="text-muted">Back to Home</a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-muted:hover {
        text-decoration: underline;
    }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}